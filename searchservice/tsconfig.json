{
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "express"
    ],
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}